{
  "name": "curve-amm-math",
  "version": "1.0.0",
  "description": "Off-chain TypeScript implementations of Curve AMM math (StableSwap, CryptoSwap) for gas-free calculations",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./rpc": {
      "types": "./dist/rpc/index.d.ts",
      "import": "./dist/rpc/index.mjs",
      "require": "./dist/rpc/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bash -c 'pnpm type-check'"
    ]
  },
  "keywords": [
    "curve",
    "defi",
    "amm",
    "stableswap",
    "cryptoswap",
    "math",
    "ethereum"
  ],
  "author": "michaeldim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldim/curve-amm-math.git"
  },
  "bugs": {
    "url": "https://github.com/michaeldim/curve-amm-math/issues"
  },
  "homepage": "https://github.com/michaeldim/curve-amm-math#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "viem": {
      "optional": true
    }
  }
}
