{
  "name": "curve-amm-math",
  "version": "0.1.0",
  "description": "Off-chain TypeScript implementations of Curve AMM math (StableSwap, CryptoSwap) for gas-free calculations",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./rpc": {
      "types": "./dist/rpc/index.d.ts",
      "import": "./dist/rpc/index.mjs",
      "require": "./dist/rpc/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "curve",
    "defi",
    "amm",
    "stableswap",
    "cryptoswap",
    "math",
    "ethereum"
  ],
  "author": "michaeldim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldim/curve-amm-math.git"
  },
  "bugs": {
    "url": "https://github.com/michaeldim/curve-amm-math/issues"
  },
  "homepage": "https://github.com/michaeldim/curve-amm-math#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "viem": {
      "optional": true
    }
  }
}
